<div class="col-md-4 mx-auto">
    <div class="card card-body">
        <form action="/productos/add" method="POST">
            <div class="form-group">
                <input type="text" name="nombre" class="form-control" placeholder="nombre" autofocus required>
            </div>
            <div class="form-group">
                <input type="number" name="codigo" class="form-control" placeholder="codigo" required>
            </div>
            <div class="form-group">
                <input type="text" name="thumbnail" class="form-control" placeholder="thumbnail" >
            </div>
            <div class="form-group">
                <input type="number" step="0.01" name="precio" class="form-control" placeholder="precio" >
            </div>
            <div class="form-group">
                <input type="number" name="stock" class="form-control" placeholder="stock" >
            </div>
            <div class="form-group">
                <input type="text" name="descripcion" class="form-control" placeholder="descripcion" >
            </div>
            <div class="form-group">
                <input type="date" name="timestamp" class="form-control" placeholder="timestamp" >
            </div>
            <button class="btn btn-primary btn-block">
                save
            </button>
        </form>
    </div>
</div>